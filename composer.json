{
    "name": "raveltan/pulse-panphp",
    "description": "A Laravel Pulse card displaying PanPHP analytics",
    "keywords": [
        "laravel",
        "pulse-panphp"
    ],
    "homepage": "https://github.com/raveltan/pulse-panphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Tally Schmeits",
            "email": "tally@schmeits.com",
            "role": "Developer"
        },
        {
            "name": "Ravel Tanjaya",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^12.0",
        "laravel/pulse": "^1.2",
        "panphp/pan": "^0.1.3",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Schmeits\\PulsePanphp\\": "src/",
            "Schmeits\\PulsePanphp\\Database\\Factories\\": "database/factories/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Schmeits\\PulsePanphp\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-pulse-panphp --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Schmeits\\PulsePanphp\\PulsePanphpServiceProvider"
            ],
            "aliases": {
                "PulsePanphp": "Schmeits\\PulsePanphp\\Facades\\PulsePanphp"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
